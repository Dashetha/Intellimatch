{
  "version": 2,
  "name": "intellimatch-frontend",
  "public": true,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://api.intellimatch.app/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1",
      "headers": {
        "Cache-Control": "s-maxage=3600, stale-while-revalidate"
      }
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://api.intellimatch.app",
    "VITE_GOOGLE_CLIENT_ID": "@intellimatch-google-client-id",
    "VITE_SENTRY_DSN": "@intellimatch-sentry-dsn"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}